html
head
  title SpotFax
  meta(charset='utf-8')
  link(rel='stylesheet',  href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
  style.
    .block {
        height: 50%;
        border: 1px solid gray;
        overflow-y: scroll;
    }
body
    div(class='report')
        div(class='row')
            div(name='representation' id='representation' class='col-xs-12 col-sm-4 col-md-4 col-lg-4 block')
                center
                    h1 Represenation
                p(name='representatives' id='representatives')
            div(name='school' id='school' class='col-xs-12 col-sm-4 col-md-4 col-lg-4 block')
                center
                    h1 School
                h4 Zoned
                p(id="school-zone-all")
                p(id="school-zone-elementary")
                p(id="school-zone-middle")
                p(id="school-zone-high")
                h4 Nearby
                p(id="school-location-all")
                p(id="school-location-elementary")
                p(id="school-location-middle")
                p(id="school-location-high")
            div(name='publicworks' id='publicworks' class='col-xs-12 col-sm-4 col-md-4 col-lg-4 block')
                center
                    h1 Public Works
        div(class='row')
            div(name='publicsafety' id='publicsafety' class='col-xs-12 col-sm-4 col-md-4 col-lg-4 block')
                center
                    h1 Public Safety
                h3(id="police-incidents") ...
                div(id="police-incidents-list" style="margin-left:20px") ...
            div(name='news' id='news' class='col-xs-12 col-sm-4 col-md-4 col-lg-4 block')
                center
                    h1 News
            div(name='participation' id='participation' class='col-xs-12 col-sm-4 col-md-4 col-lg-4 block')
                center
                    h1 Participation
    div(id="invisibleMap")
    input(type="hidden" id="locations" value=""+locations)
    input(type="hidden" id="searchPosition" value=""+position)
